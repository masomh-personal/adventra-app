{
    "name": "adventra-app",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": ">=24.0.0 <25.0.0",
        "npm": ">=11.0.0 <12.0.0"
    },
    "volta": {
        "node": "24.13.0"
    },
    "scripts": {
        "format": "prettier --write .",
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:run": "vitest run",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf node_modules .next package-lock.json coverage && npm cache clean --force",
        "clean:test": "rm -rf coverage",
        "clean:install": "rm -rf node_modules package-lock.json && npm install",
        "clean:deep": "rm -rf node_modules package-lock.json && npm cache clean --force && npm install",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,css,html,yml,yaml}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.2",
        "appwrite": "^21.5.0",
        "clsx": "^2.1.1",
        "next": "^16.1.1",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-hook-form": "^7.70.0",
        "react-icons": "^5.5.0",
        "uuid": "^13.0.0",
        "yup": "^1.7.1"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.10.2",
        "@types/react": "^19.0.6",
        "@types/react-dom": "^19.0.3",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "@vitejs/plugin-react": "^5.1.2",
        "@vitest/coverage-v8": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "autoprefixer": "^10.4.23",
        "eslint": "^9",
        "eslint-config-next": "^16.1.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-vitest": "^0.5.4",
        "husky": "^9.1.7",
        "jsdom": "^27.4.0",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.7.2",
        "vitest": "^4.0.16"
    }
}
